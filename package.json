{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"posttest": "npm run format",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr",
		"format": "prettier --loglevel warn --write \"**/*.{js,css,md}\"",
		"prepare": "husky install"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			],
			"object-curly-spacing": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"webext-options-sync": "^2.0.1",
		"webextension-polyfill-ts": "^0.26.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.0.0-nightly.2220",
		"@parcel/optimizer-cssnano": "^2.0.0-nightly.771",
		"@parcel/optimizer-htmlnano": "^2.0.0-nightly.771",
		"@parcel/packager-css": "^2.0.0-nightly.771",
		"@parcel/packager-html": "^2.0.0-nightly.771",
		"@parcel/transformer-css": "^2.0.0-nightly.771",
		"@parcel/transformer-html": "^2.0.0-nightly.771",
		"@parcel/transformer-image": "^2.0.0-nightly.2393",
		"@parcel/transformer-postcss": "^2.0.0-nightly.771",
		"@parcel/transformer-posthtml": "^2.0.0-nightly.771",
		"@parcel/transformer-webextension": "^2.0.0-nightly.2393",
		"@sindresorhus/tsconfig": "^1.0.2",
		"@types/react": "^17.0.14",
		"@types/react-dom": "^17.0.9",
		"husky": "^7.0.1",
		"lint-staged": "^11.0.1",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-nightly.769",
		"prettier": "^2.3.2",
		"stylelint": "^13.13.1",
		"stylelint-config-xo": "^0.20.0",
		"typed-query-selector": "^2.6.0",
		"xo": "^0.37.1"
	},
	"webExt": {
		"sourceDir": "distribution"
	},
	"lint-staged": {
		"*.css": "stylelint --fix",
		"*.{js,css,md,ts,tsx}": [
			"prettier --write",
			"xo --fix"
		]
	}
}
